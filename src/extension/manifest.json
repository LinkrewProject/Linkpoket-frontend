{
  "manifest_version": 3,
  "name": "Linkrew Extension",
  "version": "1.0.0",
  "description": "웹페이지를 Linkrew에 저장하세요",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "LinkrewForExtension.png",
      "48": "LinkrewForExtension.png",
      "128": "LinkrewForExtension.png"
    }
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
